generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  username     String     @unique
  email        String     @unique
  password     String

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sentDMs      DMMessage[] @relation("SentDMs")
  receivedDMs  DMMessage[] @relation("ReceivedDMs")
}

model DMMessage {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  sender    User     @relation("SentDMs", fields: [senderId], references: [id])
  senderId  String

  receiver  User     @relation("ReceivedDMs", fields: [receiverId], references: [id])
  receiverId String
}
