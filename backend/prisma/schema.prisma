generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sentDMs     DMMessage[] @relation("SentDMs")
  receivedDMs DMMessage[] @relation("ReceivedDMs")

  servers            Server[]        @relation("ServerMembers")
  ownedServers       Server[]        @relation("ServerOwner")
  serverMessagesSent ServerMessage[] @relation("SentServerMessages")
}

model DMMessage {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  sender   User   @relation("SentDMs", fields: [senderId], references: [id])
  senderId String

  receiver   User   @relation("ReceivedDMs", fields: [receiverId], references: [id])
  receiverId String
}

model Server {
  id   String @id @default(uuid())
  name String @unique

  owner   User   @relation("ServerOwner", fields: [ownerId], references: [id])
  ownerId String

  members  User[]          @relation("ServerMembers")
  messages ServerMessage[]
}

model ServerMessage {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  sender   User   @relation("SentServerMessages", fields: [senderId], references: [id])
  senderId String

  server   Server @relation(fields: [serverId], references: [id])
  serverId String
}
